/*
========================================================================================
    Nextflow config file for testing P2RANK mode
========================================================================================
    Tests the P2Rank mode using EGFR structure (1IVO) with automated binding site
    prediction and design generation.
    
    This profile tests:
    - P2Rank binding site prediction
    - Automated design YAML generation targeting predicted pockets
    - Multiple design types (protein, peptide, nanobody)
    
    Use as follows:
        nextflow run main.nf -profile test_p2rank,docker

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile - P2Rank Mode'
    config_profile_description = 'Test dataset for P2Rank mode using EGFR (1IVO) with binding site prediction'

    // Limit resources for fast testing
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'
    max_gpus   = 1

    // Input data - P2Rank mode with EGFR
    input       = "${projectDir}/assets/test_data/samplesheet_p2rank_test.csv"
    mode        = 'p2rank'
    
    // P2Rank parameters
    use_p2rank                 = true
    top_n_pockets              = 3
    min_pocket_score           = 0.5
    binding_region_mode        = 'residues'
    expand_region              = 5
    
    // Design generation parameters
    min_design_length          = 80
    max_design_length          = 120
    length_step                = 20
    n_variants_per_length      = 2
    design_type                = 'protein'
    
    // Very small values for quick testing
    num_designs = 3
    budget      = 1
    
    // Enable all metrics modules for comprehensive testing
    run_proteinmpnn            = true
    mpnn_num_seq_per_target    = 2     // Reduced from default 8 for faster testing
    run_ipsae                  = true
    run_prodigy                = true
    run_consolidation          = true
    
    // Output
    outdir      = './results_test_p2rank'
}

/*
========================================================================================
    Nextflow config file for testing DESIGN mode
========================================================================================
    Tests the design mode using pre-made Boltzgen YAML files with EGFR (1IVO) as target.
    
    This profile tests:
    - Protein binder design
    - Peptide binder design  
    - Nanobody design
    
    Use as follows:
        nextflow run main.nf -profile test_design,docker

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile - Design Mode'
    config_profile_description = 'Test dataset for design mode using EGFR (1IVO) with pre-made YAML specs'

    // Limit resources for fast testing
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'
    max_gpus   = 1

    // Input data - design mode with EGFR examples
    input       = "${projectDir}/assets/test_data/samplesheet_design_test.csv"
    mode        = 'design'
    
    // NOTE: Key Boltzgen parameters (protocol, num_designs, budget) are REQUIRED in the
    // samplesheet file (samplesheet_design_test.csv) for explicit per-sample control.
    // No fallback values are provided - all parameters must be explicitly specified.
    
    // Enable all metrics modules for comprehensive testing
    run_proteinmpnn            = true
    mpnn_num_seq_per_target    = 2     // Reduced from default 8 for faster testing
    run_ipsae                  = true
    run_prodigy                = true
    run_consolidation          = true
    
    // Output
    outdir      = './results_test_design'
}

/*
========================================================================================
    Nextflow config file for testing TARGET mode - Peptide
========================================================================================
    Tests the target mode using 2VSM structure to auto-generate peptide design.
    
    This profile tests:
    - Automated peptide design YAML generation from target structure
    - Single design with num_designs=5 and budget=2
    
    Use as follows:
        nextflow run main.nf -profile test_target_peptide,docker

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile - Target Mode (Peptide)'
    config_profile_description = 'Test dataset for target mode using 2VSM with auto-generated peptide design'

    // Limit resources for fast testing
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'
    max_gpus   = 1

    // Input data - target mode with 2VSM peptide
    input       = "${projectDir}/assets/test_data/samplesheet_target_peptide.csv"
    mode        = 'target'
    
    // Enable all metrics modules for comprehensive testing
    run_proteinmpnn            = true
    mpnn_num_seq_per_target    = 2     // Reduced from default 8 for faster testing
    run_ipsae                  = true
    run_prodigy                = true
    run_consolidation          = true
    
    // Output
    outdir      = './results_test_target_peptide'
}
